# Institutional AI Trading Bot Configuration
# ==========================================
# This configuration demonstrates the institutional-grade setup
# with production-ready parameters for hedge fund operations

# Environment Configuration
TRADING_ENVIRONMENT=production
TRADING_DEBUG=false
TRADING_TIMEZONE=America/New_York

# Database Configuration (PostgreSQL with TimescaleDB)
TRADING_DATABASE__URL=postgresql://trading_user:secure_password@localhost:5432/ai_trading_prod
TRADING_DATABASE__POOL_SIZE=20
TRADING_DATABASE__MAX_OVERFLOW=30
TRADING_DATABASE__POOL_TIMEOUT=30
TRADING_DATABASE__ECHO=false

# Alpaca API Configuration (Production)
TRADING_ALPACA__API_KEY=your_alpaca_api_key_here
TRADING_ALPACA__SECRET_KEY=your_alpaca_secret_key_here
TRADING_ALPACA__BASE_URL=https://api.alpaca.markets
TRADING_ALPACA__DATA_URL=https://data.alpaca.markets
TRADING_ALPACA__PAPER_TRADING=false
TRADING_ALPACA__MAX_REQUESTS_PER_MINUTE=200

# Redis Configuration (High-performance caching)
TRADING_REDIS__URL=redis://localhost:6379/0
TRADING_REDIS__MAX_CONNECTIONS=20
TRADING_REDIS__RETRY_ON_TIMEOUT=true

# Risk Management Configuration (Institutional Limits)
TRADING_RISK__MAX_PORTFOLIO_EXPOSURE=0.95
TRADING_RISK__MAX_POSITION_SIZE=0.08
TRADING_RISK__MAX_SECTOR_EXPOSURE=0.25
TRADING_RISK__MAX_DAILY_LOSS=0.03
TRADING_RISK__MAX_DRAWDOWN=0.10
TRADING_RISK__VAR_LIMIT_95=0.015
TRADING_RISK__VAR_LIMIT_99=0.030
TRADING_RISK__CORRELATION_LIMIT=0.65
TRADING_RISK__LEVERAGE_LIMIT=2.5
TRADING_RISK__STOP_LOSS_THRESHOLD=0.015

# Logging Configuration (Structured JSON)
TRADING_LOGGING__LEVEL=INFO
TRADING_LOGGING__LOG_DIR=logs
TRADING_LOGGING__MAX_FILE_SIZE=52428800
TRADING_LOGGING__BACKUP_COUNT=10
TRADING_LOGGING__ENABLE_CONSOLE=true
TRADING_LOGGING__ENABLE_FILE=true
TRADING_LOGGING__ENABLE_AUDIT=true
TRADING_LOGGING__STRUCTURED_FORMAT=true

# Monitoring Configuration
TRADING_MONITORING__ENABLE_PROMETHEUS=true
TRADING_MONITORING__PROMETHEUS_PORT=8000
TRADING_MONITORING__ENABLE_ALERTS=true
TRADING_MONITORING__ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
TRADING_MONITORING__HEALTH_CHECK_INTERVAL=60
TRADING_MONITORING__PERFORMANCE_REPORT_INTERVAL=3600

# Trading Symbols (Diversified Portfolio)
TRADING_SYMBOLS=["SPY", "QQQ", "IWM", "EFA", "EEM", "GLD", "TLT", "VNQ", "DIA", "XLF", "XLE", "XLK", "XLV", "XLI", "XLP"]

# Market Data Sources (Redundancy)
TRADING_MARKET_DATA_SOURCES=["alpaca", "yfinance", "iex"]

# System Configuration
TRADING_MAX_WORKERS=8
TRADING_REQUEST_TIMEOUT=30